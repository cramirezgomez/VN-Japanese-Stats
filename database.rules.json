{
  "rules": {
    "data": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        
        "games": {
          ".indexOn": [
            "name"
          ]
        },
        "routes": {
          ".indexOn": [
            "game",
            "name"
          ]
        },
        "entries": {
          ".indexOn": [
            "route"
          ]
    		}	
      }
    }
  }
}
